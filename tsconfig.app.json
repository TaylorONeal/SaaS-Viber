{
  // ============================================
  // [YOUR_APP_NAME] TypeScript Configuration (Application)
  // ============================================
  // Compiler options for your application source code (src/).
  //
  // TEMPLATE: This is configured for React + Vite with strict TypeScript.
  // The path alias "@/*" maps to "src/*" for cleaner imports.

  "compilerOptions": {
    // Language and environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // JSX configuration for React
    "jsx": "react-jsx",

    // Strictness -- keep these on for production SaaS code
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Module interop
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    // Emit -- Vite handles bundling, so TypeScript only type-checks
    "noEmit": true,

    // Skip checking node_modules type declarations for speed
    "skipLibCheck": true,

    // Path aliases -- matches vite.config.ts resolve.alias
    // Usage: import { Button } from "@/components/ui/button"
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // Include application source files
  "include": ["src"],

  // Exclude test files from the main build (optional)
  // "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts"]
}
