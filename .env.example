# ============================================
# [YOUR APP NAME] Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# See SETUP_GUIDE.md Phase 1 for guidance on each section
#
# Variables prefixed with VITE_ are exposed to the client bundle.
# Do NOT put secrets in VITE_ variables.

# ============================================
# App Configuration
# ============================================
VITE_APP_NAME="Your App Name"
VITE_APP_URL="http://localhost:8080"
VITE_APP_ENV="development"  # development | staging | production
VITE_DEMO_MODE="true"  # Set to false when backend is connected

# ============================================
# Backend (Choose one - see decisions/BACKEND_CHOICES.md)
# ============================================

# -- Supabase --
VITE_SUPABASE_URL=""
VITE_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""  # Server-side only -- NEVER prefix with VITE_

# -- Firebase --
# VITE_FIREBASE_API_KEY=""
# VITE_FIREBASE_AUTH_DOMAIN=""
# VITE_FIREBASE_PROJECT_ID=""
# VITE_FIREBASE_STORAGE_BUCKET=""
# VITE_FIREBASE_MESSAGING_SENDER_ID=""
# VITE_FIREBASE_APP_ID=""

# -- Custom API --
# VITE_API_URL="http://localhost:3001"
# API_SECRET_KEY=""  # Server-side only

# ============================================
# Authentication (see decisions/AUTH_CHOICES.md)
# ============================================
VITE_AUTH_PROVIDER="supabase"  # supabase | firebase | auth0 | clerk | local

# -- Auth0 --
# VITE_AUTH0_DOMAIN=""
# VITE_AUTH0_CLIENT_ID=""
# AUTH0_CLIENT_SECRET=""  # Server-side only

# -- Clerk --
# VITE_CLERK_PUBLISHABLE_KEY=""
# CLERK_SECRET_KEY=""  # Server-side only

# ============================================
# Payments (see decisions/PAYMENT_CHOICES.md)
# ============================================
VITE_STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""  # Server-side only
STRIPE_WEBHOOK_SECRET=""  # Server-side only

# -- Lemon Squeezy (alternative) --
# VITE_LEMONSQUEEZY_STORE_ID=""
# LEMONSQUEEZY_API_KEY=""  # Server-side only

# ============================================
# Email
# ============================================
EMAIL_PROVIDER="console"  # resend | sendgrid | smtp | console

# -- Resend --
RESEND_API_KEY=""

# -- SendGrid --
SENDGRID_API_KEY=""

# -- SMTP --
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# -- Email From Address --
EMAIL_FROM_NAME="Your App Name"
EMAIL_FROM_ADDRESS="noreply@[YOUR_DOMAIN]"

# ============================================
# File Storage (Optional)
# ============================================
# STORAGE_PROVIDER="supabase"  # supabase | s3 | cloudflare-r2
# S3_BUCKET=""
# S3_REGION=""
# S3_ACCESS_KEY_ID=""
# S3_SECRET_ACCESS_KEY=""

# ============================================
# Error Monitoring (Optional but Recommended)
# ============================================
VITE_SENTRY_DSN=""
# SENTRY_AUTH_TOKEN=""  # For source map uploads

# ============================================
# Analytics (Optional)
# ============================================
VITE_GA_MEASUREMENT_ID=""
VITE_POSTHOG_KEY=""
VITE_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# Feature Flags (Optional)
# ============================================
# VITE_FEATURE_FLAGS_PROVIDER=""  # posthog | launchdarkly | local
# LAUNCHDARKLY_SDK_KEY=""

# ============================================
# Rate Limiting (Optional)
# ============================================
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""
